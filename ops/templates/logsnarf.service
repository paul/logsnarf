[Unit]
Description=Logsnarf App Server
After=caddy2.target
After=syslog.target
After=network.target

[Service]
Type=simple
WorkingDirectory=/var/www/logsnarf/releases/current
ExecStart=/var/www/logsnarf/releases/current/bin/falcon serve --bind http://0.0.0.0:8000 --count 2
EnvironmentFile=/var/www/logsnarf/production.env
User=logsnarf
Group=logsnarf
Restart=always

[Install]
WantedBy=multi-user.target

