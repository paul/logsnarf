{
  "variables": {
    "vultr_api_key": "{{ env `VULTR_API_KEY` }}"
  },
  "builders": [{
    "type": "vultr",
    "api_key": "{{ user `vultr_api_key` }}",
    "snapshot_description": "Logsnarf",
    "region_id": 1,
    "plan_id": 201,
    "os_id": 362,
    "ssh_username": "root",
    "ssh_key_ids": "5dd1f45eeaf2b",
    "stateTimeout": 100
  }],
  "provisioners": [
    {
      "type": "file",
      "source": "ops/templates",
      "destination": "/tmp"
    },
    {
      "type": "file",
      "source": "ops/environments",
      "destination": "/tmp"
    },
    {
      "type": "shell",
      "scripts": [
        "ops/scripts/logsnarf.sh"
      ],
      "environment_vars": [
        "RACK_ENV=production"
      ]
    }
  ]
}

